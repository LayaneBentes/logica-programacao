algoritmo "Contagem-Regressiva"
// Função :
// Autor :
// Data : 06/04/2024
// Seção de Declarações 
var
numero: inteiro
inicio
// Seção de Comandos
escreva("Informe um número inteiro: ")
leia(numero)
enquanto (numero > -1) faca
         escreval("Número: ", numero)
         numero <- numero - 1
fimenquanto
fimalgoritmo
